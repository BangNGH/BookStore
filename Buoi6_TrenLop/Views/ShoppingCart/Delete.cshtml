
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Delete", "ShoppingCart", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<h3>Are you sure you want to delete this Cart?</h3>

    <input type="hidden" name="confirmDelete" value="true" />

    <button type="submit" class="btn btn-danger">Xóa giỏ hàng</button>
    <a href="@Url.Action("Index", "Book")" class="btn btn-default">Quay lại giỏ hàng</a>
}
